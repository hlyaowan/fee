<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aoyetech.air.dal.dao.plane.AirPlaneUserDAO">
	<!-- select 基本语句 -->
	<select id="airPlaneUserInfo_select" parameterType="airPlaneUserInfoDO"
		resultType="airPlaneUserInfoDO">
		select id as id,
		user_id as userId,
		air_id as airId,
		air_name
		as airName,
		air_level as airLevel,
		driver_name as driverName,
		can_change
		as
		canChange
		from air_plane_user_info
		where user_id=#{userId}
	</select>
	<!-- select count() 基本语句 -->
	<select id="airPlaneUserInfo_count" parameterType="airPlaneUserInfoDO"
		resultType="java.lang.Integer">
		select count(1) from air_plane_user_info

	</select>
	<select id="airPlaneUserInfo_select_entity" parameterType="airPlaneUserInfoDO"
		resultType="airPlaneUserInfoDO">
		select id as id,
		user_id as userId,
		air_id as airId,
		air_name
		as airName,
		air_level as airLevel,
		driver_name as driverName,
		can_change
		as
		canChange
		from air_plane_user_info
		where air_id = #{airId} and
		user_id=#{userId}
	</select>
	<!-- insert into 基本语句 -->
	<insert id="airPlaneUserInfo_insert" parameterType="airPlaneUserInfoDO">
		insert into
		air_plane_user_info(user_id,air_id,air_name,air_level,driver_name,can_change)
		values(#{userId},#{airId},#{airName},#{airLevel},#{driverName},#{canChange})
	</insert>

	<!-- update 基本语句 -->
	<update id="airPlaneUserInfo_update" parameterType="airPlaneUserInfoDO">
		update
		air_plane_user_info
		<trim prefix="SET" suffixOverrides=",">
			<if test="airName != null">air_name=#{airName},</if>
			<if test="airLevel != null">air_level=#{airLevel},</if>
			<if test="driverName != null">driver_name=#{driverName},</if>
			<if test="canChange != null">can_change=#{canChange}</if>
		</trim>
		where air_id = #{airId} and user_id=#{userId}
	</update>

	<!-- delete 基本语句 -->
	<delete id="airPlaneUserInfo_delete" parameterType="airPlaneUserInfoDO">
		delete from
		air_plane_user_info
		where id = #{id}
	</delete>
</mapper>