<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aoyetech.air.dal.dao.tool.ToolDAO">
	<!-- select 基本语句 -->
	<select id="airTool_select" parameterType="airToolDO"
		resultType="airToolDO">
		select id as id,
		`name` as name,
		goldfruit as goldfruit,
		ironstone as ironstone,
		energy as energy,
		core as core,
		wreckage as
		wreckage,
		`key` as keylock
		from air_tool
	</select>
	
	<select id="airTool_select_entity" parameterType="airToolDO"
		resultType="airToolDO">
		select id as id,
		`name` as name,
		goldfruit as goldfruit,
		ironstone as ironstone,
		energy as energy,
		core as core,
		wreckage as
		wreckage,
		`key` as keylock
		from air_tool WHERE name = #{name}
	</select>

	<!-- select count() 基本语句 -->
	<select id="airTool_count" parameterType="airToolDO" resultType="java.lang.Integer">
		select count(1) from air_tool
	</select>

	<!-- insert into 基本语句 -->
	<insert id="airTool_insert" parameterType="airToolDO">
		insert into
		air_tool(`name`,`goldfruit`,`ironstone`,`energy`,`core`,`wreckage`,`key`) 
		values(#{name},#{goldfruit},#{ironstone},#{energy},#{core},#{wreckage},#{keylock})
	</insert>

	<!-- update 基本语句 -->
	<update id="airTool_update" parameterType="airToolDO">
		update air_tool
		<trim prefix="SET" suffixOverrides=",">
			 <if test="goldfruit != null">goldfruit=#{goldfruit},</if> 
			 <if test="ironstone != null">ironstone=#{ironstone},</if>
			 <if test="energy != null">energy=#{energy},</if>
			 <if test="core != null">core=#{core},</if>
			 <if test="wreckage != null">wreckage=#{wreckage},</if>
			 <if test="keylock != null">`key`=#{keylock}</if>
		</trim>
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="name != null">
				`name`=#{name}
			</if>
		</trim>
	</update>

	<!-- delete 基本语句 -->
	<delete id="airTool_delete" parameterType="airToolDO">
		delete from air_tool
		where id = #id#
	</delete>
</mapper>